{
    "name": "ecom-fastify-redis",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "prisma:generate": "prisma generate",
        "prisma:migrate:dev": "prisma migrate dev --name init",
        "prisma:migrate:deploy": "prisma migrate deploy",
        "seed": "ts-node-dev --transpile-only prisma/seed.ts",
        "bench:cached": "autocannon -d 20 -c 100 'http://localhost:3000/products?q=phone&category=phones&min_price=300&max_price=1200'",
        "bench:nocache": "CACHE_ENABLED=0 autocannon -d 20 -c 100 'http://localhost:3000/products?q=phone&category=phones&min_price=300&max_price=1200'"
    },
    "dependencies": {
        "@fastify/cors": "^10.0.0",
        "@fastify/helmet": "^13.0.1",
        "@fastify/rate-limit": "^10.3.0",
        "@fastify/swagger": "^9.5.1",
        "@fastify/swagger-ui": "^5.2.3",
        "@prisma/client": "^5.19.0",
        "dotenv": "^16.4.5",
        "fastify": "^5.6.0",
        "fastify-plugin": "^4.5.1",
        "ioredis": "^5.4.1",
        "pino": "^9.4.0"
    },
    "devDependencies": {
        "@faker-js/faker": "^9.0.0",
        "@types/node": "^20.11.30",
        "autocannon": "^7.14.0",
        "prisma": "^5.19.0",
        "ts-node-dev": "^2.0.0",
        "tsx": "^4.20.5",
        "typescript": "^5.6.2"
    }
}
